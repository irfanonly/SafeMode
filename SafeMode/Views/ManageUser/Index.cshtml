@using Microsoft.AspNet.Identity
@model PagedList.IPagedList<SafeMode.AspNetUser>
@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    ViewBag.Admin = "active";
    ViewBag.tab1 = "tab1";
    ViewBag.CertVer = "active";
}
<style>

    .checkbox{
       width:30px;
    }
    ul.tabs2 {
        margin: 0;
        padding: 0;
        float: left;
        list-style: none;
        min-height: 45px;
        width: 100%;
        background: #00018c;
    }

    html ul.tabs2 li.active, html ul.tabs2 li.active a, html ul.tabs2 li.active a:hover {
        color: #454545;
        background-color: #f0f0f0;
        height: 44px;
    }

    ul.tabs2 li a {
        text-decoration: none;
        color: #fff;
        display: block;
        font-size: 14px;
        outline: none;
        cursor: pointer;
        text-align: center;
        padding: 0px 15px 0px 10px;
        background-color: #00018c;
        font-family: 'Open Sans' !important;
        font-weight: normal;
    }

    ul.tabs2 li {
        float: left;
        padding: 0;
        margin: 0 0 0 0px;
        min-height: 45px;
        line-height: 45px;
        border-left: none;
        margin-bottom: -1px;
        overflow: hidden;
        position: relative;
        border-right: 1px solid #eee;
    }
</style>
<div class="page_title">
    <div class="container">
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()


            <div class="title"><h1>Welcome @User.Identity.GetUserName()!  <small>(<a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>)</small></h1></div>
            <div class="pagenation">&nbsp;@Html.ActionLink("Home", "Index", "Home") <i>/</i> Certificate Verification</div>
            @*<a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>*@

        }

    </div>
</div><!-- end page title -->
<!-- Contant
======================================= -->

<div class="container">

    <div class="content_fullwidth">

        @*<h2><strong>Tab</strong> Style One</h2>*@

        <div id="tabs2">

            <ul class="tabs">
                <li class="active"><a href="#@ViewBag.tab1">Manage Users</a></li>
                <li class=""><a href="@Url.Content("/ManageCert/Index")">Manage Certificates</a></li>
                <li class=""><a href="@Url.Content("/ManageCal/Index")">Manage Calender</a></li>
                @*<li class=""><a href="#tab4">Domain Names</a></li>*@

            </ul><!-- /# end tab links -->
            <div class="tab-container">

                <div id="@ViewBag.tab1" class="tab-content">

                    @*<div class="clearfix divider_line8"></div>*@
                    <div class="one_full">

                        @*<h2><strong>Users</strong> (@Model.Count())</h2>*@

                        <div class="success">

                            @ViewBag.SuccessMsg
                        </div>

                        <div class="error">

                            @ViewBag.ErrorMsg
                        </div>
                        <ul class="list_empty">
                            <li><input class="input_bg" placeholder="Search By Name" style="width:100%" type="text" /></li>
                            <li  style="padding-top:5px"><a href="#" class="but_plus" ><i class="fa fa-search  fa-lg"></i> Search</a> </li>
                            <li style="padding-top:5px"><a href="/Account/RegisterUser" class="but_plus"><i class="fa fa-plus fa-lg"></i> Add New User</a> </li>
                            <li style="padding-top:5px"><a href="#" class="but_plus"><i class="fa fa-minus fa-lg"></i> Delete Selected Users</a> </li>
                          
                           
                        </ul>
                      
                       
                        <div class="table-style">
                            <table class="table-list">
                                <tbody>
                                    <tr>
                                        <th class="checkbox"></th>
                                        <th>Name/ Company Name</th>
                                        <th>Username</th>
                                        <th>Contact</th>
                                        <th>Email</th>
                                        <th></th>
                                    </tr>
                                   
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td><input type="checkbox">@*<input id="id" type="hidden" value="@ad.id" />*@</td>
                                            <td>@user.Name</td>
                                            <td>@user.UserName</td>
                                            <td>@user.PhoneNumber</td>
                                            <td>@user.Email</td>
                                            <td>@Html.ActionLink("Edit","Edit",new { id= user.Id })</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div style="text-align:center">
                            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                            @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))

                        </div>

                    </div>

                 
                </div><!-- end tab single section -->


            </div>

        </div><!-- end tab -->

        <div class="clearfix divider_line5"></div>


    </div>

</div><!-- end content area -->


